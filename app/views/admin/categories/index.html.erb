<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', "/admin/categories/new", class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>No</th>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |item| %>
          <tr>
            <td><%= item[:id] %></td>
            <% path = "/categories/" + item[:id].to_s %>
            <td><%= link_to item[:name], path %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</section>